<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/transparent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/type_image"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:alpha="0.8" />

    <TextView
        android:id="@+id/type_describe"
        style="@style/SpinnerProjectText"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/type_image"
        android:gravity="center_vertical"
        android:text="添加消费"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/drag_list_item_image"
        android:layout_width="28dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@mipmap/drag_item_image" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/main_divider" />
</RelativeLayout>