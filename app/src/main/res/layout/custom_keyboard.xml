<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:orientation="horizontal">

        <com.lckiss.weekly.widget.MyNumberTextView
            android:id="@+id/one"
            style="@style/ProjectText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/custom_keyboard_selector"
            android:clickable="true"
            android:gravity="center"
            android:text="1"
            android:textSize="22.0sp" />

        <com.lckiss.weekly.widget.MyNumberTextView
            android:id="@+id/two"
            style="@style/ProjectText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/custom_keyboard_selector"
            android:clickable="true"
            android:gravity="center"
            android:text="2"
            android:textSize="22.0sp" />

        <com.lckiss.weekly.widget.MyNumberTextView
            android:id="@+id/three"
            style="@style/ProjectText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/custom_keyboard_selector"
            android:clickable="true"
            android:gravity="center"
            android:text="3"
            android:textSize="22.0sp" />

        <com.lckiss.weekly.widget.MyNumberTextView
            android:id="@+id/toggle"
            style="@style/ProjectText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/custom_keyboard_selector"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/toggle_record"
            android:textSize="18.0sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:orientation="horizontal">

        <com.lckiss.weekly.widget.MyNumberTextView
            android:id="@+id/four"
            style="@style/ProjectText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/custom_keyboard_selector"
            android:clickable="true"
            android:gravity="center"
            android:text="4"
            android:textSize="22.0sp" />

        <com.lckiss.weekly.widget.MyNumberTextView
            android:id="@+id/five"
            style="@style/ProjectText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/custom_keyboard_selector"
            android:clickable="true"
            android:gravity="center"
            android:text="5"
            android:textSize="22.0sp" />

        <com.lckiss.weekly.widget.MyNumberTextView
            android:id="@+id/six"
            style="@style/ProjectText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/custom_keyboard_selector"
            android:clickable="true"
            android:gravity="center"
            android:text="6"
            android:textSize="22.0sp" />

        <com.lckiss.weekly.widget.MyNumberTextView
            android:id="@+id/add"
            style="@style/ProjectText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/custom_keyboard_selector"
            android:clickable="true"
            android:gravity="center"
            android:text="+"
            android:textSize="22.0sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:orientation="horizontal">

        <com.lckiss.weekly.widget.MyNumberTextView
            android:id="@+id/seven"
            style="@style/ProjectText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/custom_keyboard_selector"
            android:clickable="true"
            android:gravity="center"
            android:text="7"
            android:textSize="22.0sp" />

        <com.lckiss.weekly.widget.MyNumberTextView
            android:id="@+id/eight"
            style="@style/ProjectText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/custom_keyboard_selector"
            android:clickable="true"
            android:gravity="center"
            android:text="8"
            android:textSize="22.0sp" />

        <com.lckiss.weekly.widget.MyNumberTextView
            android:id="@+id/nine"
            style="@style/ProjectText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/custom_keyboard_selector"
            android:clickable="true"
            android:gravity="center"
            android:text="9"
            android:textSize="22.0sp" />

        <com.lckiss.weekly.widget.MyNumberTextView
            android:id="@+id/sub"
            style="@style/ProjectText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/custom_keyboard_selector"
            android:clickable="true"
            android:gravity="center"
            android:text="-"
            android:textSize="22.0sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:orientation="horizontal">

        <com.lckiss.weekly.widget.MyNumberTextView
            android:id="@+id/dot"
            style="@style/ProjectText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/custom_keyboard_selector"
            android:clickable="true"
            android:gravity="center"
            android:text="."
            android:textSize="22.0sp" />

        <com.lckiss.weekly.widget.MyNumberTextView
            android:id="@+id/zero"
            style="@style/ProjectText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/custom_keyboard_selector"
            android:clickable="true"
            android:gravity="center"
            android:text="0"
            android:textSize="22.0sp" />

        <com.lckiss.weekly.widget.MyNumberTextView
            android:id="@+id/del"
            style="@style/ProjectText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/custom_keyboard_selector"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/delete_tag"
            android:textSize="22.0sp" />

        <com.lckiss.weekly.widget.MyNumberTextView
            android:id="@+id/equal"
            style="@style/ProjectText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/custom_keyboard_selector"
            android:clickable="true"
            android:gravity="center"
            android:text="OK"
            android:textSize="22.0sp" />
    </LinearLayout>
</LinearLayout>